pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }

    stages {

        stage("Git Checkout") {
            steps {
                git 'https://github.com/Prashant4656/DevOps-Project-Zomato-Kastro.git'
            }
        }

        stage("Build Docker Image") {
            steps {
                sh "docker build -t prashant4656/zomatoapp:1.0 ."
            }
        }

        stage("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login',
                            passwordVariable: 'dockerhubpass',
                            usernameVariable: 'dockerhublogin')]) {

                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push prashant4656/zomatoapp:1.0"
                    }
                }
            }
        }

        stage('Config & Deployment') {
            steps {

                withCredentials([
                    aws(credentialsId: 'awslogin',
                        accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                        secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'),
                    
                    file(credentialsId: 'bookmyshow_pem', variable: 'PEMFILE')
                ]) {

                    dir('terraformfiles') {

                        sh '''
                            echo "PEMFILE = $PEMFILE"
                            ls -l "$PEMFILE"

                            if [ -d "$PEMFILE" ]; then
                                echo "‚ùå ERROR: PEMFILE points to a directory, not a file"
                                exit 1
                            fi

                            chmod 600 "$PEMFILE"

                            terraform init
                            terraform validate
                            terraform apply --auto-approve -var="pem_file=$PEMFILE"
                        '''
                    }
                }
            }
        }
    }
}
