pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }

    stages {
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Prashant4656/DevOps-Project-Zomato-Kastro.git'
            }
        }
        
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t prashant4656/zomatoapp:1.0 ."
            }
        }
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push prashant4656/zomatoapp:1.0 "
                    }
                }
            }
        }
        stage('Use PEM') {
            steps {
                withCredentials([file(credentialsId: 'bookmyshow_pem', variable: 'PEMFILE')]) {
                    sh '''
                        chmod 600 "$PEMFILE"
                        ssh -i "$PEMFILE" ec2-user@server-ip "hostname"
                    '''
                }
            }
        }
        stage('Config & Deployment') {
            steps {
                
               withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'awslogin', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir('terraformfiles') {
                    sh 'sudo chmod 600 bookmyshow.pem'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform apply --auto-approve'
}
    }
}
}
    }
}
